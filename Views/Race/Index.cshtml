@{
    ViewData["Title"] = "Home Page";
} 
@model IEnumerable<Race>
@{
    ViewData["Title"] = "Home Page";
} 
  <div class="album py-5 bg-light">
        <div class="container">
          <div class="row">
          @foreach(var item in Model)
          {
            <div class="col-md-4">
              <div class="card mb-4 box-shadow">
                <img class="card-img-top" src="@item.Image" height="225" width="100%" alt="Card image cap">
                <div class="card-body">
                  <p class="card-text">@item.Title</p>
                  <p class="card-text">@item.Description</p>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                      <a type="button" asp-controller="Race" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary m-1">View</a>
                      @if(User.Identity.IsAuthenticated && User.IsInRole("admin"))
                      {
                      <a type="button" asp-controller="Race" asp-action="Edit" asp-route-id="@item.Id"  class="btn btn-sm btn-outline-secondary m-1">Edit</a>
                      <a type="button" asp-controller="Race" asp-action="Delete" asp-route-id="@item.Id"  class="btn btn-sm btn-outline-danger m-1">Delete</a>
                      }

                    </div>
                    <small class="text-muted">@item.RaceCategory</small>
                  </div>
                </div>
              </div>
            </div>            
          }            
     </div>
   </div>
</div>
