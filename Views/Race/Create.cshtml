@using RunApp.Data.Enum
@model RunApp.ViewModels.CreateRaceViewModel
<form  method="post" asp-action="Create" enctype="multipart/form-data">
<input type="hidden" id="AppUserId" name="AppUserId" asp-for="AppUserId" >
  <div class="form-group mt-2">
    <label asp-for="Title">Title</label>
    <input asp-for="Title" class="form-control mt-2" placeholder="Title">
    <span asp-validation-for="Title" class="text-danger"></span>
    </div>

  <div class="form-group mt-2">
    <label asp-for="Description">Description</label>
    <input asp-for="Description" class="form-control mt-2" placeholder="Description">
    <span asp-validation-for="Description" class="text-danger"></span>
    </div>

  <div class="form-group mt-2">
    <label asp-for="RaceCategory">Race Category</label>
    <select class="form-control mt-2" asp-for="RaceCategory" asp-items="@Html.GetEnumSelectList<RaceCategory>()">
        <option>--Select--</option>
    </select>
    <span asp-validation-for="RaceCategory" class="text-danger"></span>
    </div>

  <div class="form-group mt-2">
    <label asp-for="Address.Street">Street</label>
    <input asp-for="Address.Street" class="form-control mt-2" placeholder="Street">
    <span asp-validation-for="Address.Street" class="text-danger"></span>
    </div>

  <div class="form-group mt-2">
    <label asp-for="Address.City">City</label>
    <input asp-for="Address.City" class="form-control mt-2" placeholder="City">
    <span asp-validation-for="Address.City" class="text-danger"></span>
    </div>

  <div class="form-group mt-2">
    <label asp-for="Address.State">State</label>
    <input asp-for="Address.State" class="form-control mt-2" placeholder="State">
    <span asp-validation-for="Address.State" class="text-danger"></span>
    </div>

  <div class="form-group mt-2">
    <label asp-for="Image">Image</label>
    <input asp-for="Image" type="file" class="form-control mt-2" placeholder="Image">
    <span asp-validation-for="Image" class="text-danger"></span>
    </div>

  <button type="submit" class="btn btn-primary mt-4">Submit</button>
</form>